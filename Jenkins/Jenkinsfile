pipeline {
    agent {
     node {
    		label 'myawsvm'
    		}
    }

     options    {
                timestamps()
                buildDiscarder(logRotator(numToKeepStr: '1', artifactNumToKeepStr: '1'))
                timeout(time: 10, unit: 'MINUTES')
                disableConcurrentBuilds()
                }

    stages {
        stage('AppCode-Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/awsdevopspractise/aws-b4-maven-app.git'
            }
            }
        stage('App-Build') {
            steps {
                sh 'mvn clean package'
                //sh 'sleep 100'
            }
            }
        stage('Docker Build & Push') {
            steps {

            script {

            withCredentials([string(credentialsId: 'docker-token', variable: 'token')]) {

    			sh 'docker login -u pylifedevops -p ${token}'
			}

            }   
                sh 'docker build . -t pylifedevops/cicd:v3'
                sh 'docker push pylifedevops/cicd:v3'
                echo "Job is successfully completed and Thank you"
            }                        
        }

        stage ('K8SManiFest-Checkout') {
                steps {

                    git 'https://github.com/awsdevopspractise/aws-k8s-cicd.git'

                }
            }

        stage ('Kubernetes AutoDeployment') {
  

                steps {

                    dir('manifests')
                     {

                    sh 'ls -l'
                    // kubectl apply -f <fileName>.yml
                    sh 'kubectl --server=https://60D68DAE74E9C2E234A797B7CD3EE8AC.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6Iks5VXQ2emxsSUVnblFDTHR1SVB4RkdoZ0RCUG40TldYUE9GN3VkdkVjQWcifQ..Yuprn91icOeBuaKTmsMw4Fpo8EaYzEzKbH0zm78K2rdJzY58ZWVVnjaERqfAn3N0idXPCuiUHRUfPmxEN5v0rpuYYnvm1qJBt06FCt50jpa_elrDszqDaeiEa6llxMoZV6GF7dA-4WvcR4mIDeJ3C20IVw_Dz3YBsYYIroCyRKaYozCO48Zvm5hpf6N1U1V6kCxj0GKEt6Vxw9qJESMfLKDpFjjVVyQMqYODQh6NtiRKaDPoAo3U4KYVS2v3gJZznBZdK9_M68IKoBeEpsSYdbnlgOp_zQTcb8ppx8ntq4NkGXeK1F5AeS21a_6mdsY37eV2RLJ-j-0Bca-586s-qw" apply -f deployment.yml'

                    sh 'kubectl --server=https://60D68DAE74E9C2E234A797B7CD3EE8AC.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6Iks5VXQ2emxsSUVnblFDTHR1SVB4RkdoZ0RCUG40TldYUE9GN3VkdkVjQWcifQ..Yuprn91icOeBuaKTmsMw4Fpo8EaYzEzKbH0zm78K2rdJzY58ZWVVnjaERqfAn3N0idXPCuiUHRUfPmxEN5v0rpuYYnvm1qJBt06FCt50jpa_elrDszqDaeiEa6llxMoZV6GF7dA-4WvcR4mIDeJ3C20IVw_Dz3YBsYYIroCyRKaYozCO48Zvm5hpf6N1U1V6kCxj0GKEt6Vxw9qJESMfLKDpFjjVVyQMqYODQh6NtiRKaDPoAo3U4KYVS2v3gJZznBZdK9_M68IKoBeEpsSYdbnlgOp_zQTcb8ppx8ntq4NkGXeK1F5AeS21a_6mdsY37eV2RLJ-j-0Bca-586s-qw" apply -f service.yml'
                    
                    sh 'kubectl --server=https://60D68DAE74E9C2E234A797B7CD3EE8AC.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6Iks5VXQ2emxsSUVnblFDTHR1SVB4RkdoZ0RCUG40TldYUE9GN3VkdkVjQWcifQ..Yuprn91icOeBuaKTmsMw4Fpo8EaYzEzKbH0zm78K2rdJzY58ZWVVnjaERqfAn3N0idXPCuiUHRUfPmxEN5v0rpuYYnvm1qJBt06FCt50jpa_elrDszqDaeiEa6llxMoZV6GF7dA-4WvcR4mIDeJ3C20IVw_Dz3YBsYYIroCyRKaYozCO48Zvm5hpf6N1U1V6kCxj0GKEt6Vxw9qJESMfLKDpFjjVVyQMqYODQh6NtiRKaDPoAo3U4KYVS2v3gJZznBZdK9_M68IKoBeEpsSYdbnlgOp_zQTcb8ppx8ntq4NkGXeK1F5AeS21a_6mdsY37eV2RLJ-j-0Bca-586s-qw" rollout restart deployment/java-app-deployment'
                    
                    echo "kubernetes deployment is done"

                    sh 'kubectl get deployments'
                    sh 'kubectl get services'
                    
                    }

                    }
                }
    }
}